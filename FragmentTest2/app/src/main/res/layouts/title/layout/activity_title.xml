<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".title.TitleActivity">

    <FrameLayout
        android:id="@+id/TitleContainer"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintBottom_toTopOf="@+id/title_fragment"
        app:layout_constraintEnd_toStartOf="@+id/title_fragment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/title_fragment"
        app:layout_constraintTop_toBottomOf="@+id/title_fragment" />

    <fragment
        android:id="@+id/title_fragment"
        android:name="com.example.fragmenttest2.title.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>